{
  "parser": "babel-eslint",
  "env": {
    "browser" : true,
    "node": true,
    "es6": true,
    "jest": true,
    "commonjs": true
  },
  "rules": {
    "semi": ["error", "always"],
    "prefer-const": 1,
    "spaced-comment": ["error", "always", {
      "line": {
        "markers": ["/"],
        "exceptions": ["-", "+"]
      },
      "block": {
        "markers": ["!"],
        "exceptions": ["*"],
        "balanced": true
      }
    }],
    "react/prop-types": 0
  },
  "globals": {
    "expect": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}